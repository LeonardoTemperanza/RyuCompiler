program_exit:   100
*/

proc main()->int
{
    int res = 0;
    res += TestControlStructures();
    return res;
}

proc TestControlStructures()->int
{
    int a = 0;
    int b = 10;
    
    defer a *= b;
    
    for(int i = 0; i < b; ++i)
    {
        if(i == 2) continue;
        if(i == 8) break;
        a += i;
    }
    
    {
        int i = 0;
        while(i < b)
        {
            a += i;
            if(i == 1) { ++i; continue; }
            if(i == 6) break;
            ++i;
        }
    }
    
    do
    {
        a += 3;
    }
    while(false);
    
    int switchVar = 2;
    switch(switchVar)
    {
        case 0: a *= 1;
        case 1: a *= 2;
        case 2: a *= 3;
        case 3: a = 1;
    }
    
    switch(switchVar)
    {
        case 0: a = 0;
        case 1: a = 0;
        default: ++a;
    }
    
    b = 6;
    return a;
}
